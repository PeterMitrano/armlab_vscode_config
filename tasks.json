{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build release",
            "type": "shell",
            "command": "./my_make",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ]
            }
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "./my_make_debug",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ]
            }
        },
        {
            "label": "classifiers tensorboard",
            "type": "shell",
            "command": "tensorboard --logdir trials",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/link_bot/link_bot_classifiers"
            }
        },
        {
            "label": "dynamics tensorboard",
            "type": "shell",
            "command": "tensorboard --logdir trials",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/link_bot/state_space_dynamics"
            }
        }
        {
            "label": "generate kinematic rope model",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/link_bot/link_bot_gazebo/Media/models/kinematic_rope",
            },
            "command": "n_links=25 mass=0.2 length=0.8 radius=0.01 erb kinematic_rope.erb > kinematic_rope.sdf",
        },
        {
            "label": "generate dragging rope model",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/link_bot/link_bot_gazebo/Media/models/rope_dragging_2d",
            },
            "command": "n_links=10 mass=0.5 length=0.5 radius=0.02 erb rope_dragging_2d.erb > rope_dragging_2d.sdf",
        },
    ]
}